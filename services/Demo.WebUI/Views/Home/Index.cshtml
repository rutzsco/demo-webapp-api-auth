@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">User Details</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col" style="text-align: left">Type</th>
                <th scope="col" style="text-align: left">Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Claims)
            {
                <tr scope="row">
                    <td align="left">@item.Type</td>
                    <td align="left">@item.Value</td>
                </tr>
            }
            @foreach (var h in Model.Headers)
            {
                <tr scope="row">
                    <td align="left">@h.Key</td>
                    <td align="left">@h.Value</td>
                </tr>
            }
        </tbody>
    </table>
</div>